  <section class="jumbotron text-center">
    <div class="container">
      <h1>会員編集</h1>
      <p class="lead text-muted">
        <%= @customer.nickname %> さんの会員情報編集<br>
      </p>
    </div>
  </section>

   <body class="bg-light">
     <%= form_with model:@customer, url: admin_customer_path(@customer) do |f| %>
      <div class="container">
       <h4 class="mb-3">Edit</h4>
        <div class="col-md-8 order-md-1">
         <form class="needs-validation" novalidate>
          <div class="row">
           <div class="col-md-6 mb-3">
            <label for="kitchen-img">ニックネーム</label>
              <%= f.text_field :nickname, :placeholder =>"#{@customer.nickname}" %>
           </div>
          </div>
         </form>
       </div>

    <div class="col-md-8 order-md-1">
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="nickname">メールアドレス</label>
              <%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %>
          </div>
        </div>
      </form>
    </div>

    <div class="col-md-8 order-md-1">
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="mail">会員ステータス</label>
					  <%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", class: "text-active" %>
					  <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会済み", class: "text-invalid" %>
          </div>
        </div>
      </form>
    </div>

     <%= f.submit "更新", class: "btn btn-primary" %>

      </div>
     <% end %>
    </body>
