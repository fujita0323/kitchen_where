  <section class="jumbotron text-center">
    <div class="container">
      <h1>会員一覧</h1>
    </div>
  </section>

<table class="table table-bordered"> 
  <thead>
    <tr>
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customer.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer) do %>
        <%= customer.nickname %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted %>
          <span>退会</span>
      	<% else %>
  	    	<span>有効</span>
  		  <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>