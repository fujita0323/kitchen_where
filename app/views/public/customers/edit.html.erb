  <section class="jumbotron text-center">
    <div class="container">
      <h1>User Edit</h1>
      <p class="lead text-muted">
        会員情報の編集ができます<br>
      </p>
      </p>
    </div>
  </section>

  <body class="bg-light">
  <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
     <div class="container">
      <h4 class="mb-3">Edit</h4>
       <div class="col-md-8 order-md-1">
         <form class="needs-validation" novalidate>
          <div class="row">
           <div class="col-md-6 mb-3">
            <label for="kitchen-img">プロフィール画像</label>
              <%= f.file_field :profile_image %>
            </div>
           </div>
          </form>
         </div>

    <div class="col-md-8 order-md-1">
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-6 mb-3">
              <%= f.text_field :nickname %>
            <label for="review">ニックネーム</label>
          </div>
        </div>
      </form>
    </div>

    <div class="col-md-8 order-md-1">
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.text_field :email %>
            <label for="evaluation">メールアドレス</label>
          </div>
        </div>
      </form>
    </div>

         <%= f.submit '編集内容を保存', class: "btn btn-success" %>
         <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
  </div>
         <% end %>
</body>